@model WebBanHangOnline.Models.EF.CodeDiscount

@{
    ViewBag.Title = "Mã khuyến mãi ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    @*Left navbar links*@
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/codediscounts" class="nav-link">Mã khuyến mãi</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}


@*Content Header (Page header)*@
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới Mã khuyến mãi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Mã khuyến mãi</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm Mã khuyến mãi</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "CodeDiscounts", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mã khuyến mãi</label>
                        @Html.TextBoxFor(x => x.code, new { @class = "form-control", @placeholder = "Mã khuyến mãi..." })
                        @Html.ValidationMessageFor(x => x.code, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Trạng thái</label>
                        @Html.DropDownListFor(x => x.isActive, ViewBag.statusList as SelectList, "-Chọn trạng thái-", new { @class = "form-control", @placeholder = "Mã mã phẩm" })
                        @Html.ValidationMessageFor(x => x.isActive, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Phần trăm giảm</label>
                        @Html.TextBoxFor(x => x.Discount, new { @class = "form-control", @placeholder = "Phần trăm khuyến mãi...." })
                        @Html.ValidationMessageFor(x => x.Discount, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Người tạo mã khuyến mãi</label>
                        @Html.TextBoxFor(x => x.CreatedBy, new { @class = "form-control", @placeholder = "Người tạo mã khuyến mãi..." })
                        @Html.ValidationMessageFor(x => x.CreatedBy, null, new { @class = "text-danger" })
                    </div>
                    


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a href="/admin/codediscounts" class="btn btn-danger">Quay lại</a>
                    </div>
                </div>

                }

            </div>
        </div>

        <div class="card-footer">

        </div>
    </div>
    

</section>

@section  scripts{
    <script>
          $(document).ready(function () {
              CKEDITOR.replace('txtDetail', {
                  customConfig: '/content/ckeditor/config.js',
                  extraAllowedContent: 'span',
              });
          });
          function BrowseServer(field) {
              var finder = new CKFinder();
              finder.selectActionFunction = function (fileUrl) {
                  document.getElementById(field).value = fileUrl;
              };
              finder.popup();
          }

    </script>
}
 
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
