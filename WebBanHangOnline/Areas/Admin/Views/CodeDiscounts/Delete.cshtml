@model WebBanHangOnline.Models.EF.CodeDiscount

@{
    ViewBag.Title = "Xoá mã khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/codediscounts" class="nav-link">Mã khuyến mãi</a>
        </li>
        
    </ul>
}

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Xác nhận xoá mã khuyến mãi</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Delete", "CodeDiscounts", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mã khuyến mãi: </label>
                            @Html.DisplayFor(model => model.code)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Trạng thái: </label>
                            @Html.DisplayFor(model => model.isActive)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phần trăm giảm: </label>
                            @Html.DisplayFor(model => model.Discount)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Người tạo mã khuyến mãi: </label>
                            @Html.DisplayFor(model => model.CreatedBy)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ngày tạo mã khuyến mãi: </label>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Người thay đổi mã khuyến mãi: </label>
                            @Html.DisplayFor(model => model.Modifiedby)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ngày thay đổi: </label>
                            @Html.DisplayFor(model => model.ModifiedDate)
                        </div>



                        <div class="form-group">
                            <button type="submit" value="Delete" class="btn btn-sm btn-danger btnDelete">Xoá</button>
                            <a href="/admin/codediscounts" class="btn btn-sm btn-primary">Quay lại</a>
                        </div>
                    </div>

                }

            </div>
        </div>

        <div class="card-footer">

        </div>
    </div>


</section>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
